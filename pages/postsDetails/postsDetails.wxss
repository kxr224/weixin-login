/* pages/postsDetails/postsDetails.wxss */
.title {
  margin: 10px;
  color: #191970
}

.user {
  width: 100%;
  height: 30px;
  line-height: 30px;
  padding-left: 20px;
  display: flex
}

.avatar {
  width: 20px;
  height: 20px;
  border-radius: 50%
}

.userName {
  padding-left: 5px;
  font-size: 12px;
  color: #666666
}

.pic {
  width: 86%;
  height: 200px;
  margin:  20px 7% 10px 7%
}

image {
  width: 100%;
  height: 100%
}

.intro {
  width: 94%;
  height: auto;
  padding: 0 3%;
  font-size: 12px;
  color: #666666
}

.comment {
  position: fixed;
  bottom: 0
}

.commentList {
  margin: 10px;
  padding-bottom: 50px;
  color: #191970
}

.commentContent {
  margin-top: 10px
}

.commenAvatar {
  width: 20px;
  height: 20px;
  border-radius: 50%
}
