/* pages/posts/posts.wxss */
.postsBox {
  margin: 0 10px
}

.title {
  width: 90%;
  height: 30px;
  line-height: 30px;
  overflow: hidden;
  text-overflow:ellipsis;
  white-space: nowrap;
  font-weight: bold
}

.uesr {
  display: flex;
  color: #666666;
  font-size: 11px
}

.avatar {
  width: 20px;
  height: 20px;
  border-radius: 50%
}

text {
  padding-left: 5px
}

.content {
  display: flex;
  width: 100%;
  height: 70px;
  padding-bottom: 5px;
  font-size: 13px;
  color: #333333
}

.intro {
  width: 70%;
  height: 50%;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp:2;
  -webkit-box-orient: vertical
}

.pic {
  width: 30%;
  height: 100%
}

image {
  width: 100%;
  height: 100%
}

.add {
  width: 40px;
  height: 40px;
  background-color: skyblue;
  position: fixed;
  bottom: 40px;
  right: 20px;
  z-index: 111;
  border-radius: 50%;
  display: flex
}

.icon {
  margin: auto
}

